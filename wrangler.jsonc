{
  "$schema": "node_modules/wrangler/config-schema.json",
  
  "assets": {
    "directory": "./dist",
    "binding": "ASSETS"
  },
  
  "routes": [
    {
      "pattern": "sitemap.xml",
      "custom_domain": true
    },
    {
      "pattern": "sitemap_index.xml",
      "custom_domain": true
    },
    {
      "pattern": "*",
      "custom_domain": true
    }
  ],
  
  "serve_single_page_app": true
}

